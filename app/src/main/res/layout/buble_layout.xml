<?xml version="1.0" encoding="utf-8"?>
<com.txusballesteros.bubbles.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:clipToPadding="false">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/avatar"
        android:src="@drawable/fahmi"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"></de.hdodenhof.circleimageview.CircleImageView>

    <com.nex3z.notificationbadge.NotificationBadge
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:id="@+id/count"
        app:nbMaxTextLength="2"
        app:nbBackground="@drawable/bg_with_shadow"></com.nex3z.notificationbadge.NotificationBadge>
</com.txusballesteros.bubbles.BubbleLayout>